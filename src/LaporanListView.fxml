<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LaporanListController">
    <center>
        <VBox alignment="TOP_CENTER" spacing="0.0">
            <padding>
                <Insets top="20.0" bottom="20.0" left="40.0" right="40.0" />
            </padding>
            
            <!-- Main Content Card -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" maxWidth="900.0">
                <padding>
                    <Insets top="20.0" bottom="20.0" left="20.0" right="20.0" />
                </padding>
                
                <!-- Tab Pane -->
                <TabPane fx:id="tabPane" style="-fx-background-color: transparent;">
                    
                    <!-- Publik Tab -->
                    <Tab fx:id="publikTab" text="Publik" closable="false">
                        <VBox spacing="15.0">
                            <padding>
                                <Insets top="10.0" bottom="10.0" left="10.0" right="10.0" />
                            </padding>
                            
                            <TableView fx:id="publikTable" style="-fx-background-color: transparent; -fx-table-cell-border-color: #e9ecef;">
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                </columnResizePolicy>
                            </TableView>
                            
                        </VBox>
                    </Tab>
                    
                    <!-- Oleh Anda Tab -->
                    <Tab fx:id="olehAndaTab" text="Oleh Anda" closable="false">
                        <VBox spacing="15.0">
                            <padding>
                                <Insets top="10.0" bottom="10.0" left="10.0" right="10.0" />
                            </padding>
                            
                            <TableView fx:id="olehAndaTable" style="-fx-background-color: transparent; -fx-table-cell-border-color: #e9ecef;">
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                </columnResizePolicy>
                            </TableView>
                            
                            <!-- Buat Laporan Button -->
                            <HBox alignment="CENTER_RIGHT">
                                <Button fx:id="buatLaporanButton" onAction="#handleBuatLaporan" 
                                       text="Buat Laporan Baru" 
                                       style="-fx-background-color: #ff6b6b; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 14px; -fx-padding: 10 20; -fx-font-weight: bold;" />
                            </HBox>
                            
                        </VBox>
                    </Tab>
                    
                </TabPane>
                
            </VBox>
        </VBox>
    </center>
</BorderPane>
