<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom, #f8fbff, #e8f4fd);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BuatLaporanController">
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
            <VBox alignment="TOP_CENTER" spacing="0.0">
                <padding>
                    <Insets top="30.0" bottom="30.0" left="40.0" right="40.0" />
                </padding>
                
                <!-- Main Content Card -->
                <VBox style="-fx-background-color: linear-gradient(to bottom, #ffffff, #fefffe); -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(100,149,237,0.15), 20, 0.3, 0, 5);" maxWidth="750.0">
                    <padding>
                        <Insets top="40.0" bottom="40.0" left="40.0" right="40.0" />
                    </padding>
                    
                    <!-- Header -->
                    <HBox alignment="CENTER_LEFT" spacing="25.0">
                        <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: #87ceeb; -fx-font-size: 15px; -fx-cursor: hand; -fx-border-color: transparent; -fx-background-radius: 10;" text="← Kembali" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="Buat Laporan Bencana" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #4682b4;">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                    </HBox>
                    
                    <Separator style="-fx-background-color: linear-gradient(to right, transparent, #b0e0e6, transparent); -fx-pref-height: 2;">
                        <VBox.margin>
                            <Insets top="25.0" bottom="30.0" />
                        </VBox.margin>
                    </Separator>
                    
                    <!-- Form Content -->
                    <VBox spacing="30.0">
                        
                        <!-- Lokasi Bencana Section -->
                        <VBox spacing="18.0" style="-fx-background-color: rgba(176,224,230,0.1); -fx-background-radius: 15; -fx-padding: 25;">
                            <Label text="📍 Lokasi Bencana*" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #4682b4;" />
                            
                            <HBox spacing="20.0">
                                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                                    <Label text="Pilih Provinsi*" style="-fx-font-size: 14px; -fx-text-fill: #5f9ea0; -fx-font-weight: 500;" />
                                    <ComboBox fx:id="provinsiCombo" promptText="Pilih Provinsi" maxWidth="Infinity" 
                                             style="-fx-background-color: white; -fx-border-color: #b0e0e6; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 8; -fx-font-size: 13px;" />
                                </VBox>
                                
                                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                                    <Label text="Pilih Kota*" style="-fx-font-size: 14px; -fx-text-fill: #5f9ea0; -fx-font-weight: 500;" />
                                    <ComboBox fx:id="kotaCombo" promptText="Pilih Kota" maxWidth="Infinity"
                                             style="-fx-background-color: white; -fx-border-color: #b0e0e6; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 8; -fx-font-size: 13px;" />
                                </VBox>
                                
                                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                                    <Label text="Pilih Kecamatan" style="-fx-font-size: 14px; -fx-text-fill: #5f9ea0; -fx-font-weight: 500;" />
                                    <ComboBox fx:id="kecamatanCombo" promptText="Pilih Kecamatan" maxWidth="Infinity"
                                             style="-fx-background-color: white; -fx-border-color: #b0e0e6; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 8; -fx-font-size: 13px;" />
                                </VBox>
                            </HBox>
                            
                            <VBox spacing="10.0">
                                <Label text="Detail Lokasi" style="-fx-font-size: 14px; -fx-text-fill: #5f9ea0; -fx-font-weight: 500;" />
                                <TextArea fx:id="lokasiDetailArea" promptText="Tulis lokasi bencana selengkap mungkin..." 
                                         prefRowCount="2" wrapText="true"
                                         style="-fx-background-color: white; -fx-border-color: #b0e0e6; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 12; -fx-font-size: 13px;" />
                            </VBox>
                        </VBox>
                        
                        <!-- Deskripsi Bencana Section -->
                        <VBox spacing="18.0" style="-fx-background-color: rgba(173,216,230,0.12); -fx-background-radius: 15; -fx-padding: 25;">
                            <Label text="📝 Deskripsi Bencana*" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #4682b4;" />
                            
                            <HBox spacing="20.0">
                                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                                    <Label text="Pilih Jenis Bencana*" style="-fx-font-size: 14px; -fx-text-fill: #5f9ea0; -fx-font-weight: 500;" />
                                    <ComboBox fx:id="jenisBencanaCombo" promptText="Pilih Jenis Bencana" maxWidth="Infinity"
                                             style="-fx-background-color: white; -fx-border-color: #add8e6; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 8; -fx-font-size: 13px;" />
                                </VBox>
                                
                                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                                    <Label text="Jumlah Korban Hilang" style="-fx-font-size: 14px; -fx-text-fill: #5f9ea0; -fx-font-weight: 500;" />
                                    <TextField fx:id="korbanHilangField" promptText="0" 
                                              style="-fx-background-color: white; -fx-border-color: #add8e6; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 8; -fx-font-size: 13px;" />
                                </VBox>
                                
                                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                                    <Label text="Jumlah Korban Luka" style="-fx-font-size: 14px; -fx-text-fill: #5f9ea0; -fx-font-weight: 500;" />
                                    <TextField fx:id="korbanLukaField" promptText="0"
                                              style="-fx-background-color: white; -fx-border-color: #add8e6; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 8; -fx-font-size: 13px;" />
                                </VBox>
                            </HBox>
                            
                            <VBox spacing="10.0">
                                <Label text="Deskripsi Lengkap*" style="-fx-font-size: 14px; -fx-text-fill: #5f9ea0; -fx-font-weight: 500;" />
                                <TextArea fx:id="deskripsiArea" promptText="Tulis deskripsi bencana selengkap mungkin..." 
                                         prefRowCount="4" wrapText="true"
                                         style="-fx-background-color: white; -fx-border-color: #add8e6; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 12; -fx-font-size: 13px;" />
                            </VBox>
                        </VBox>
                        
                        <!-- Media Pendukung Section -->
                        <VBox spacing="18.0" style="-fx-background-color: rgba(135,206,235,0.08); -fx-background-radius: 15; -fx-padding: 25;">
                            <Label text="📷 Media Pendukung" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #4682b4;" />
                            
                            <!-- Foto Bencana -->
                            <VBox spacing="12.0">
                                <Label text="Foto Bencana*" style="-fx-font-size: 15px; -fx-text-fill: #5f9ea0; -fx-font-weight: 500;" />
                                <FlowPane fx:id="fotoContainer" hgap="15.0" vgap="15.0" prefWrapLength="650.0" 
                                         style="-fx-background-color: rgba(255,255,255,0.7); -fx-background-radius: 10; -fx-padding: 15; -fx-border-color: rgba(176,224,230,0.5); -fx-border-width: 1; -fx-border-radius: 10; -fx-border-style: dashed;" />
                            </VBox>
                            
                            <!-- Video Bencana -->
                            <VBox spacing="12.0">
                                <Label text="Video Bencana" style="-fx-font-size: 15px; -fx-text-fill: #5f9ea0; -fx-font-weight: 500;" />
                                <FlowPane fx:id="videoContainer" hgap="15.0" vgap="15.0" prefWrapLength="650.0" 
                                         style="-fx-background-color: rgba(255,255,255,0.7); -fx-background-radius: 10; -fx-padding: 15; -fx-border-color: rgba(176,224,230,0.5); -fx-border-width: 1; -fx-border-radius: 10; -fx-border-style: dashed;" />
                            </VBox>
                        </VBox>
                        
                        <!-- Submit Button -->
                        <HBox alignment="CENTER">
                            <VBox.margin>
                                <Insets top="25.0" />
                            </VBox.margin>
                            <Button fx:id="kirimLaporanButton" onAction="#handleKirimLaporan" 
                                   text="📤 Kirim Laporan Bencana" 
                                   style="-fx-background-color: linear-gradient(to right, #4682b4, #5f9ea0); -fx-text-fill: white; -fx-background-radius: 25; -fx-font-size: 16px; -fx-padding: 15 35; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(70,130,180,0.3), 8, 0.3, 0, 3);" />
                        </HBox>
                        
                    </VBox>
                    
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>