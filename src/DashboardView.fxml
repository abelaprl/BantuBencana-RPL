<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.StackPane?>


<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DashboardController">
    <left>
        <VBox prefWidth="250.0" style="-fx-background-color: #2E8B57;" alignment="TOP_CENTER" spacing="15.0">
            <padding>
                <Insets top="20.0" bottom="20.0" left="10.0" right="10.0" />
            </padding>
            <ImageView fitHeight="80.0" fitWidth="80.0" preserveRatio="true">
                <image>
                    <Image url="@../img/logo_placeholder.png" />
                </image>
            </ImageView>
            <Label text="Bantu Bencana" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            <Label fx:id="userEmailLabel" text="[Email Pengguna]" textFill="WHITE">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <VBox spacing="10.0" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <Button text="Home" prefWidth="230.0" alignment="CENTER_LEFT" style="-fx-background-color: #3CB371; -fx-text-fill: white;" />
                <Button text="Laporan Bencana" prefWidth="230.0" alignment="CENTER_LEFT" style="-fx-background-color: transparent; -fx-text-fill: white;" onAction="#handleLaporanBencana" />
                <Button text="Donasi" prefWidth="230.0" alignment="CENTER_LEFT" style="-fx-background-color: transparent; -fx-text-fill: white;" />
                <Button text="Relawan" prefWidth="230.0" alignment="CENTER_LEFT" style="-fx-background-color: transparent; -fx-text-fill: white;" />
                <Button text="Instruksi" prefWidth="230.0" alignment="CENTER_LEFT" style="-fx-background-color: transparent; -fx-text-fill: white;" />
                <Button text="Feedback" prefWidth="230.0" alignment="CENTER_LEFT" style="-fx-background-color: transparent; -fx-text-fill: white;" />
                <Button text="History" prefWidth="230.0" alignment="CENTER_LEFT" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            </VBox>
            <VBox VBox.vgrow="ALWAYS" /> <Button text="Logout" prefWidth="230.0" alignment="CENTER_LEFT" style="-fx-background-color: #FF6347; -fx-text-fill: white;" onAction="#handleLogout"/>
        </VBox>
    </left>
    <center>
        <VBox spacing="20.0" alignment="TOP_CENTER">
            <padding>
                <Insets top="20.0" bottom="20.0" left="20.0" right="20.0" />
            </padding>
            <Label text="Informasi Bencana Terbaru" alignment="CENTER" HBox.hgrow="ALWAYS">
                <font>
                    <Font name="System Bold" size="22.0" />
                </font>
            </Label>
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                <content>
                    <VBox fx:id="bencanaListContainer" spacing="15.0" />
                </content>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
