{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compileAndPrepareJavaFX", // Ini nama task Anda, bisa diganti
            "type": "shell",
            "command": "${workspaceFolder}/compile.bat", // Ini mengacu ke compile.bat di root proyek
            "group": {
                "kind": "build",
                "isDefault": true // (Opsional) Ini membuat task ini default 'build' task (Ctrl+Shift+B)
            },
            "problemMatcher": [], // Biarkan kosong, atau konfigurasikan untuk menangkap error kompilasi
            "presentation": {
                "reveal": "always", // Pastikan terminal terlihat saat task berjalan
                "panel": "new"     // Buka panel terminal baru untuk task ini
            }
        }
    ]
}